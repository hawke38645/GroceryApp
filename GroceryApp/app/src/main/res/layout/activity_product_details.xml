<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include layout="@layout/app_bar"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_view_product_detail"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/toolbar"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:text="₹"
            android:textSize="16dp"
            android:id="@+id/text_view_product_detail_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorButtonText"
            android:layout_below="@+id/image_view_product_detail"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="₹"
            android:textSize="16dp"
            android:textColor="#04DC04"
            android:id="@+id/text_view_product_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_product_detail"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/text_view_product_detail_mrp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="Description"
            android:textColor="@color/colorButtonText"
            android:id="@+id/text_view_product_detail_desc"
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_product_detail_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"/>

    </RelativeLayout>

</RelativeLayout>