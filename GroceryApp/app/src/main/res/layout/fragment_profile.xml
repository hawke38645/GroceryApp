<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_view_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Welcome"
        android:textColor="@color/colorButtonText"
        android:textSize="26sp" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/text_view_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_profile_title"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:text="Name:"
        android:textColor="@color/colorButtonText" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/text_view_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name_label"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Email:"
        android:textColor="@color/colorButtonText" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/text_view_mobile_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_email_label"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Mobile:"
        android:textColor="@color/colorButtonText" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/text_view_street_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_mobile_label"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Streetname:"
        android:textColor="@color/colorButtonText" />

    <TextView
        android:id="@+id/text_view_city_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_street_name_label"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="City:"
        android:textColor="@color/colorButtonText"
        android:textSize="18sp" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/text_view_home_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_city_name_label"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Home No:"
        android:textColor="@color/colorButtonText" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/text_view_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_home_number_label"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Location:"
        android:textColor="@color/colorButtonText" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/text_view_clickable_order_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_location_label"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="View My Orders"
        android:textColor="@color/colorButtonText" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:background="@drawable/custom_login_button"
        android:text="LOGOUT"
        android:textColor="@color/colorButtonText" />

</RelativeLayout>